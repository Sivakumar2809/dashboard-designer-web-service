{
  "widgetName": "MultiComboBox",
  "guid": "bc4dd368-1172-4d75-8e25-0b5faa9469d9",
  "displayName": "MultiComboBox",
  "category": "Miscellaneous",
  "description": "Sample widget for getting start",
  "srcFile": "src/sourcefile.js",
  "version": "3.1.0.0",
  "dependencies": {
    "scripts": [
      "src/ej2CustomMultiSelect.min.js"
    ],
    "styles": [
		"style/material.min.css",
		"style/widget.css"
    ]
  },
  "dataFields": [
    {
      "displayName": "Column (s)",
      "valueType": "dimension",
      "name": "column",
      "min": "1",
      "max": "20",
      "optional": "false"
    }
  ],
  "functionalities": [
    {
      "header": "Basic Settings",
      "properties": [
        {
          "displayName": "Enable Multiselect",
          "controlType": "bool",
          "name": "enablemultiselect",
          "defaultValue": "true"
        },
        {
          "displayName": "Allow Filter",
          "controlType": "bool",
          "name": "allowfilter",
          "defaultValue": "true"
        },
        //{
        //  "displayName": "Act As Slave Widget",
        //  "controlType": "bool",
        //  "name": "actasslavewidget",
        //  "defaultValue": "true"
        //}
      ]
    },
    {
      "header": "Text Properties",
      "properties": [
        {
          "displayName": "Show Text",
          "controlType": "checkbox",
          "name": "showText",
          "defaultValue": "true"
        },
        {
          "displayName": "Text",
          "controlType": "textbox",
          "name": "text",
          "defaultValue": "My first widget is created successfully"
        },
        {
          "displayName": "Background Color",
          "controlType": "colorpicker",
          "name": "textBackground",
          "defaultValue": "#FFE5E5"
        },
        {
          "displayName": "Size",
          "controlType": "updown",
          "name": "textSize",
          "defaultValue": "17",
          "min": "0",
          "max": "600"
        },
        {
          "displayName": "Style",
          "controlType": "combobox",
          "name": "textStyle",
          "defaultValue": "normal",
          "listItems": [
            "normal",
            "italic"
          ]
        }
      ]
    }
  ],
  "filterSettings": {
    "masterFilter": {
      "visible": "true",
      "defaultValue": "true"
    },
    "ignoreMasterFilter": {
      "visible": "true",
      "defaultValue": "false"
    }
  }
}