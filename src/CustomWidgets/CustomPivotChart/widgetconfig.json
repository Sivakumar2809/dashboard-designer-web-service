{
  "widgetName": "CustomPivotChart",
  "guid": "3e34d29e-baa7-426d-9646-57e3af402c21",
  "displayName": "Pivot Chart",
  "category": "Miscellaneous",
   "description": "Compare values for a set of unordered items across categories",
  "srcFile": "src/sourcefile.js",
  "version": "3.1.0.0",
  "dependencies": {
    "scripts": [
      "src/ej2.pivotview.min.js"
    ],
    "styles": [
      "style/widget.css"
    ]
  },
  "dataFields": [
    {
      "displayName": "Value",
      "valueType": "measure",
      "name": "value",
      "min": "1",
      "max": "2",
      "optional": "false"
    },
    {
      "displayName": "Column",
      "valueType": "dimension",
      "name": "column",
      "min": "1",
      "max": "1",
      "optional": "false"
    },
	{
      "displayName": "Row",
      "valueType": "dimension",
      "name": "row",
      "min": "1",
      "max": "2",
      "optional": "false"
    }
  ],
  "functionalities": [
	{
	  "header": "Basic Settings",
      "properties": [
        {
          "displayName": "Chart Type",
          "controlType": "enumeration",
          "name": "chartType",
          "defaultValue": "StackingColumn",
		  "listItems": [
            "Line",
            "Spline",
			"Column",
			"StackingColumn"
          ]
        },
		{
          "displayName": "Use Chart Color",
          "controlType": "bool",
          "name": "cchartColor",
          "defaultValue": "false"
        },
		{
          "displayName": "Chart Color",
          "controlType": "color",
          "name": "chartColor",
          "defaultValue": "#00bdae"
        },
		{
          "displayName": "Enable Animation",
          "controlType": "bool",
          "name": "animation",
          "defaultValue": "false"
        },
        {
          "displayName": "LabelIntersectAction",
          "controlType": "enumeration",
          "name": "labelintersectaction",
          "defaultValue": "Hide",
		  "listItems": [
            "Trim",
            "Hide"
          ]
        },
		{
          "displayName": "Show Category Axis",
          "controlType": "bool",
          "name": "showxaxis",
          "defaultValue": "true"
        },
		{
          "displayName": "Category Axis Gridline",
          "controlType": "bool",
          "name": "glxaxis",
          "defaultValue": "true"
        },
        {
          "displayName": "Show Category Axis Title",
          "controlType": "bool",
          "name": "showxaxistitle",
          "defaultValue": "true"
        },
        {
          "displayName": "Category Axis Title Text",
          "controlType": "text",
          "name": "xaxistitletext",
          "defaultValue": ""
        },
        {
          "displayName": "Show Primary Axis",
          "controlType": "bool",
          "name": "showyaxis",
          "defaultValue": "true"
        },
		{
          "displayName": "Primary Axis Gridline",
          "controlType": "bool",
          "name": "glyaxis",
          "defaultValue": "true"
        },
        {
          "displayName": "Show Primary Axis Title",
          "controlType": "bool",
          "name": "showyaxistitle",
          "defaultValue": "true"
        },
        {
          "displayName": "Primary Axis Title Text",
          "controlType": "text",
          "name": "yaxistitletext",
          "defaultValue": ""
        }
      ]
	},
	{
      "header": "Legend Settings",
      "properties": [
        {
          "displayName": "Show Legend",
          "controlType": "bool",
          "name": "showLegend",
          "defaultValue": "true"
        },
		{
          "displayName": "Legend Position",
          "controlType": "enumeration",
          "name": "legendPosition",
          "defaultValue": "Bottom",
		  "listItems": [
            "Top",
            "Right",
			"Left",
			"Bottom"
          ]
        },
		{
          "displayName": "Legend Shape",
          "controlType": "enumeration",
          "name": "legendShape",
          "defaultValue": "SeriesType",
		  "listItems": [
            "SeriesType",
            "Circle"
          ]
        }
      ]
    }
  ],
  "filterSettings": {
    "masterFilter": {
      "visible": "false",
      "defaultValue": "true"
    },
    "ignoreMasterFilter": {
      "visible": "false",
      "defaultValue": "false"
    }
  }
}